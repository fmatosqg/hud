<?xml version="1.0" encoding="utf-8"?>
<layout>

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.fmatos.samples.hud.MainActivity">


        <ImageView
            android:id="@+id/background_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:imageUrl="@{viewModel.imgUrl}"
            app:placeholder="@{viewModel.imgPlaceholder}"
            tools:src="@drawable/rocket_diamonds" />


        <LinearLayout

            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="50dp"
            android:background="@color/transparentGray"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="30dp">


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent">

                <TextView
                    android:id="@+id/alert_text"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@color/transparent"
                    android:lines="1"
                    android:paddingTop="10dp"
                    android:textAlignment="center"
                    android:textColor="@color/darkGreen"
                    android:textSize="110sp"
                    app:autoSizeStepGranularity="1sp"
                    app:autoSizeTextType="uniform"
                    tools:text="Some Alert"
                    tools:visibility="gone" />

                <TextView
                    android:id="@+id/countdown_text"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@color/transparent"
                    android:lines="1"
                    android:paddingTop="10dp"
                    android:textAlignment="center"

                    android:textSize="80sp"
                    app:autoSizeStepGranularity="1sp"
                    app:autoSizeTextType="uniform"
                    tools:text="1 day to whatever" />
            </FrameLayout>

            <TextView
                android:id="@+id/test_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:padding="10dp"
                android:textSize="40sp"
                android:visibility="gone"
                tools:text="Test"
                tools:visibility="gone" />

            <TextView
                android:id="@+id/ip_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:text="@{viewModel.wifi}"
                android:textSize="20sp"
                tools:text="1.1.1.1" />

            <TextView
                android:id="@+id/clock_date_text"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/transparent"
                android:lines="1"
                android:padding="10dp"
                android:text="@{viewModel.date}"
                android:textAlignment="center"
                android:textSize="40sp"
                app:autoSizeStepGranularity="1sp"
                app:autoSizeTextType="uniform"
                tools:text="24/5 friday august 2017" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent">


                <TextView
                    android:id="@+id/label_am"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AM"
                    android:textSize="30sp"
                    android:visibility="@{viewModel.am}"
                    app:layout_constraintEnd_toStartOf="@id/clock_time_text"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/label_pm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PM"
                    android:textSize="30sp"
                    android:visibility="@{viewModel.pm}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/clock_time_text"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/label_am"
                    tools:visibility="visible" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/clock_time_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/dseg7classic_light"
                    android:lines="1"
                    android:text="@{viewModel.time}"
                    android:textAlignment="center"
                    android:textSize="80sp"
                    app:autoSizeMinTextSize="12sp"
                    app:autoSizeStepGranularity="1sp"
                    app:autoSizeTextType="uniform"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"

                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="!7:46" />


            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </FrameLayout>


    <data>

        <variable
            name="viewModel"
            type="com.fmatos.samples.hud.MainViewModel" />
    </data>

</layout>