<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.fmatos.samples.hud.MainActivity">


        <ImageView
            android:id="@+id/background_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:src="@drawable/rocket_diamonds" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            android:gravity="center"
            android:orientation="horizontal">

            <FrameLayout
                android:id="@+id/container"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:layout_weight="0.7"
                android:padding="@dimen/cardMargin">

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@color/transparent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="20dp">


                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent">

                        <TextView
                            android:id="@+id/alert_text"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:background="@color/transparent"
                            android:lines="1"
                            android:paddingTop="10dp"
                            android:textAlignment="center"
                            android:textColor="@color/darkGreen"
                            android:textSize="110sp"
                            app:autoSizeStepGranularity="1sp"
                            app:autoSizeTextType="uniform"
                            tools:text="Some Alert"
                            tools:visibility="gone" />

                        <TextView
                            android:id="@+id/countdown_text"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:background="@color/transparent"
                            android:lines="1"
                            android:paddingTop="10dp"
                            android:textAlignment="center"

                            android:textSize="80sp"
                            app:autoSizeStepGranularity="1sp"
                            app:autoSizeTextType="uniform"
                            tools:text="1 day to whatever" />
                    </FrameLayout>

                    <TextView
                        android:id="@+id/test_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent"
                        android:padding="10dp"
                        android:textSize="40sp"
                        android:visibility="gone"
                        tools:text="Test"
                        tools:visibility="gone" />

                    <TextView
                        android:id="@+id/ip_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent"
                        android:textSize="20sp"
                        tools:text="1.1.1.1" />

                    <TextView
                        android:id="@+id/clock_date_text"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@color/transparent"
                        android:lines="1"
                        android:padding="10dp"
                        android:textAlignment="center"
                        android:textSize="40sp"
                        app:autoSizeStepGranularity="1sp"
                        app:autoSizeTextType="uniform"
                        tools:text="24/5 friday august 2017" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/label_am"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/transparent"
                            android:text="AM"
                            android:textSize="30dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="@id/clock_time_text" />

                        <TextView
                            android:id="@+id/label_pm"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/transparent"
                            android:text="PM"
                            android:textSize="30dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/label_am"
                            tools:visibility="invisible" />

                        <TextView
                            android:id="@+id/clock_time_text"
                            android:layout_width="0dp"
                            android:layout_height="120sp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:background="@color/transparent"
                            android:fontFamily="@font/dseg7classic_light"
                            android:lines="1"
                            android:paddingTop="10dp"
                            android:text="@{viewModel.time}"
                            android:textAlignment="center"
                            android:textSize="410sp"
                            app:autoSizeStepGranularity="1sp"
                            app:autoSizeTextType="uniform"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@id/label_am"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:text="!7:46" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>
            </FrameLayout>


            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <data>

        <variable
            name="viewModel"
            type="com.fmatos.samples.hud.MainViewModel" />
    </data>

</layout>